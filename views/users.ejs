<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head %>
</head>
<body class="container">

<header>
    <% include partials/header %>
</header>

<main>
    <div class="jumbotron">
        <h2>These are default users:</h2>
        
        <% user.users.forEach(function(user) { %>
            <p>User, aged <%= user.age %>, is named <%= user.firstName %> <%= user.lastName %> and has a popularity level of: <%= user.popularity %>.</p>
        <% }); %>
        
    </div>
    <div class="jumbotron">
        <h2>Add a user:</h2>
        <form action="/users/create" method="post">

            <label>First Name</label>
            <input type="text" name="firstName">
            <label>Last Name</label>
            <input type="text" name="lastName">
            <label>Popularity</label>
            <input type="number" name="popularity">
            <label>Age</label>
            <input type="number" name="age">

            <button type="submit">Add User</button>
        </form>
    </div>
</main>

<footer>
    <% include partials/footer %>
</footer>

</body>
</html>